<Window x:Class="egg55.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="492" Width="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <DataGrid x:Name="dgTodoList" AutoGenerateColumns="False" Height="400" Margin="0,0,0,34" >
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding Path=IsDone}" Header="Done" Width="80"/>
                <DataGridTextColumn Binding="{Binding Path=Text}" Header="Todo" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="SaveBtn" Margin="0,382,0,33" Click="Save_Click">Save</Button>
        <StatusBar Margin="0,426,0,0" Height="50" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <StatusBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.261"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.55"/>
                </TransformGroup>
            </StatusBar.RenderTransform>
            <TextBlock Text="{Binding ElementName=dgTodoList, Path=SelectedIndex}" Width="292" Height="43"></TextBlock>
        </StatusBar>
    </Grid>

</Window>
